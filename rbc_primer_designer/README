-d /Users/u5264546/Work/Projects/RBC_for_github/rice_mapping/RBC_code/rbc_primer_designer/p3_Vienna_settings.txt \
--SPQRNO=ONT \
-T 10 \
-z /Users/u5264546/Work/Projects/RBC_for_github/rice_mapping/RBC_code/utils/mfeprimer-3.1.5-darwin-10.6-amd64 \
-b /Users/u5264546/genomes/Sorghum/Sbicolor_454_v3.0.1_chr_only_len17_min5.msk.fa \
-v -v -v \
> primer_outfile.rbcp

